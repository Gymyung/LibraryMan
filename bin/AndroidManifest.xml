<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.gzu.libaraymana"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.EnterActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Black.NoTitleBar"
             android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.MainActivity"
           android:launchMode="singleInstance"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activities.AddBookActivity"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activities.EditBookActivity"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activities.JieBookActivity"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activities.HuanBookActivity"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        <activity android:name=".activities.SearchInfoActivity"
           android:screenOrientation="portrait"
           android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
        
        
        
        
        
        <!-- 测试资源类 -->
        <activity android:name=".test.BookDbImplTest"
            android:label="@string/app_name"></activity>
        
    </application>

</manifest>
