<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >
    <TextView
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/app_topmenu_bg"
        android:gravity="center"
        android:text="@string/bms"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="@string/welcome" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_welcome"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_menuitem_addbook_ll"
                style="@style/main_menuitem_layout">

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_add" />

                <TextView
                   style="@style/main_menuitem_tx"
                    android:text="@string/icon_add" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menuitem_editbook_ll"
                style="@style/main_menuitem_layout">

                <ImageView
                   style="@style/main_menuitem_img"
                    android:src="@drawable/main_edit" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/icon_modify" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menuitem_querybook_ll"
                style="@style/main_menuitem_layout" >

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_query" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/icon_seek" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_menuitem_jiebook_ll"
                style="@style/main_menuitem_layout" >

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_jie" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/icon_borrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menuitem_huanbook_ll"
               style="@style/main_menuitem_layout" >

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_huan" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/icon_return" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menuitem_usermana_ll"
                style="@style/main_menuitem_layout" >

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_usermana" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="借书人管理" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/main_menuitem_setting_ll"
                style="@style/main_menuitem_layout" >

                <ImageView
                   style="@style/main_menuitem_img"
                    android:src="@drawable/main_setting" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/system_setting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_menuitem_version_ll"
                style="@style/main_menuitem_layout" >

                <ImageView
                    style="@style/main_menuitem_img"
                    android:src="@drawable/main_version" />

                <TextView
                    style="@style/main_menuitem_tx"
                    android:text="@string/version_infomation" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


<RelativeLayout
    android:id="@+id/anim_menu_rl" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/anim_menu_level1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level1" >

        <ImageView
            android:id="@+id/anim_menu_icon_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_home" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/anim_menu_level2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level2" >

        <ImageView
            android:id="@+id/anim_menu_icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/icon_search" />

        <ImageView
            android:id="@+id/anim_menu_icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/icon_menu" />

        <ImageView
            android:id="@+id/anim_menu_icon_myyouku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/icon_myyouku" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/anim_menu_level3"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level3" >
        
        <ImageView 
            android:id="@+id/anim_menu_channel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/channel1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
        
        <ImageView
            android:id="@+id/anim_menu_channel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anim_menu_channel1"
            android:layout_alignLeft="@id/anim_menu_channel1"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/channel2" />
        
        <ImageView
            android:id="@+id/anim_menu_channel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anim_menu_channel2"
            android:layout_alignLeft="@id/anim_menu_channel2"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/channel3" />
        <ImageView
            android:id="@+id/anim_menu_channel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/channel4" />
        
        
      
        
        <ImageView 
            android:id="@+id/anim_menu_channel7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/channel7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />
      
            
        <ImageView
            android:id="@+id/anim_menu_channel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anim_menu_channel7"
            android:layout_alignRight="@id/anim_menu_channel7"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/channel6" />
        
        
        <ImageView
            android:id="@+id/anim_menu_channel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/anim_menu_channel6"
            android:layout_alignRight="@id/anim_menu_channel6"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/channel5" />
    </RelativeLayout>
    
</RelativeLayout>

</FrameLayout>