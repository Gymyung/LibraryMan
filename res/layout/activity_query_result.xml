<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/app_topmenu_bg">
        <ImageView 
            android:id="@+id/query_result_previous_img"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:src="@drawable/all_previous_step_select"/>
        <TextView 
            android:id="@+id/query_result_title_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query_info_result"
            android:textSize="20sp"
            android:layout_weight="7"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            />
    </LinearLayout>
	    <TextView 
	        android:id="@+id/query_result_tx"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:textColor="@color/item_blue"
	        android:textSize="18sp"
	        android:padding="10dp"
	        />
	</LinearLayout>
	<TextView 
        android:id="@+id/query_result_load_tx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/item_blue"
        android:textSize="26sp"
        android:gravity="center"
        android:text="@string/querying_wait_moment"/>
</FrameLayout>
