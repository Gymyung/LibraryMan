<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/app_bg">
    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:orientation="horizontal"
	        android:background="@color/app_topmenu_bg">
	        <ImageView 
	            android:id="@+id/userlist_previous_img"
	            android:layout_width="55dp"
	            android:layout_height="45dp"
	            android:src="@drawable/all_previous_step_select"/>
	        <TextView 
	            android:id="@+id/userlist_title_tx"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="借书人管理"
	            android:textSize="20sp"
	            android:layout_weight="7"
	            android:gravity="center"
	            android:layout_gravity="center_vertical"
	            android:textColor="@color/white"
	            />
	        <ImageView 
	            android:id="@+id/userlist_menu_img"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_weight="1"
	            android:layout_gravity="center_vertical"
	            android:src="@drawable/all_menu_select"/>
	    </LinearLayout>
	    
    <ListView 
        android:id="@+id/userlist_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        ></ListView>

     <Button
           android:id="@+id/userlist_banli_btn"
           android:layout_gravity="bottom"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:layout_weight="1"
           android:padding="15dp"
           android:background="@drawable/all_blue_button_select"
           android:textSize="22sp"
           android:textColor="@color/white"
           android:text="新用户注册" />
</LinearLayout>
